<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.threerings</groupId>
    <artifactId>export-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>export-dll</artifactId>
  <packaging>dll</packaging>
  <name>Export 2.0 DLL</name>

  <properties>
    <unity.version>5.1.1p3</unity.version>
    <mono.version>3.0</mono.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>com.unity3d</groupId>
      <artifactId>engine</artifactId>
      <version>${unity.version}</version>
      <type>dll</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.unity3d</groupId>
      <artifactId>engine.ui</artifactId>
      <version>${unity.version}</version>
      <type>dll</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.unity3d</groupId>
      <artifactId>mscorlib</artifactId>
      <version>${mono.version}</version>
      <type>dll</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.unity3d</groupId>
      <artifactId>System</artifactId>
      <version>${mono.version}</version>
      <type>dll</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.unity3d</groupId>
      <artifactId>System.Core</artifactId>
      <version>${mono.version}</version>
      <type>dll</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.unity3d</groupId>
      <artifactId>System.Xml</artifactId>
      <version>${mono.version}</version>
      <type>dll</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.unity3d</groupId>
      <artifactId>System.Xml.Linq</artifactId>
      <version>${mono.version}</version>
      <type>dll</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.threerings</groupId>
      <artifactId>trinity-dll</artifactId>
      <version>1.1-SNAPSHOT</version>
      <type>dll</type>
    </dependency>
    <dependency>
      <groupId>com.threerings</groupId>
      <artifactId>Ionic.Zlib</artifactId>
      <version>1.1-SNAPSHOT</version>
      <type>dll</type>
    </dependency>
  </dependencies>

  <build>
    <directory>${project.basedir}/target/dll</directory>
    <plugins>
      <plugin>
        <groupId>com.threerings.maven</groupId>
        <artifactId>mono-maven-plugin</artifactId>
        <version>0.0-SNAPSHOT</version>
        <extensions>true</extensions>
        <configuration>
          <sources>
            <source>src/main/cs/*.cs</source>
          </sources>
          <verbose>true</verbose>
          <noconfig>true</noconfig>
          <nostdlib>true</nostdlib>
        </configuration>
     </plugin>
   </plugins>
  </build>
</project>
